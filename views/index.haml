!!! 5
%html
  %head
    %title How about that Weather?
    = haml :head
    %script{ :src => 'javascript/main.js', :type => 'text/javascript' }
  %body
    #main
      %h1 How about that Weather?
      %h2 
        %form{ :type => "POST", :action => "/" }
          %span &hellip; in
          %input{ :type => :text, :id => "query", :name => "query", 
                  :placeholder => "     location", :value => @query }

      - unless @weather_data.nil?
        %ul
          - for weather in @weather_data
            %li.day 
              %pre
                %span= weather.time
            %li.data
              %canvas{ "data-hour" => 12 }
              %span.condition= weather.conditions
              %span.temp= weather.temp
      #footer
        :markdown
